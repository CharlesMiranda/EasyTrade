<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login">

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/login"
        android:hint="EndereÃ§o de e-mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgFoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/EditLogin"
        android:inputType="textWebEmailAddress"
        android:drawableRight="@drawable/ic_person_outline_white_24dp" />

    <EditText
        android:id="@+id/senha"
        android:layout_below="@+id/login"
        android:hint="Senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        style="@style/EditLogin"
        android:drawableRight="@drawable/ic_https_white_24dp" />

    <!--<View
        android:id="@+id/divisor"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@+id/senha"
        android:layout_marginTop="20dp"/>-->

    <Button
        android:id="@+id/logar"
        android:text="Entrar com e-mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senha"
        style="@style/BotaoPadrao"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
