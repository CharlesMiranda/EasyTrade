<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.interaje.easytrade">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activites.Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activites.ListProduto"
            android:parentActivityName=".activites.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.interaje.easytrade.activites.MainActivity" />
        </activity>
        <activity
            android:name=".activites.AddProduto"
            android:parentActivityName=".activites.ListProduto"
            android:theme="@style/ThemeComActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activites.DetailProdutoPedido"
            android:parentActivityName=".activites.AddPedido"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activites.AddPedido"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activites.ListCarrinho"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".utils.InsertProdutos"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activites.ListCliente"
            android:parentActivityName=".activites.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.interaje.easytrade.activites.MainActivity" />
        </activity>
        <activity
            android:name=".activites.AddCliente"
            android:parentActivityName=".activites.ListProduto"
            android:theme="@style/ThemeComActionBar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
